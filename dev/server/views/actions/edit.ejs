<div class="mdl-layout mdl-js-layout mdl-color--grey-100" align="center">
    <main class="mdl-layout__content">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text">Editar Perfil</h2>
            </div>
            <div class="mdl-card__supporting-text">
                    <form action="/actions/update/<%= actions.id %>" method="POST" class="form-signin">
                        <div class="mdl-textfield mdl-js-textfield">
                            <label class="mdl-textfield__label" class="form-control">Tipo: <%=actions.type%></label><br></br>
                            <select name="type">
                            <option value="Blocked">Blocked</option>
                            <option value="Incorporated">Incorporated</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Ready for Test">Ready for Test</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Accepted">Accepted</option>
                            </select>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            <input class="mdl-textfield__input" class="form-control" type="text" name="user" value="<%=actions.user%>">
                            <label class="mdl-textfield__label" class="form-control">User</label>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield">
                            <input class="mdl-textfield__input" class="form-control" type="text" name="message" value="<%=actions.message%>">
                            <label class="mdl-textfield__label" class="form-control">Message</label>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Editar</button>
                        </div>
                    </form>
            </div>
        </div>
    </main>
</div>