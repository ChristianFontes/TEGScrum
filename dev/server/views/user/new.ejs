<div class="mdl-layout mdl-js-layout mdl-color--grey-100" align="center">
    <main class="mdl-layout__content">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h2 class="mdl-card__title-text">Nuevo Miembro</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <form action="/user/create" method="POST" class="form-signin">
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="email" name="email">
                        <label class="mdl-textfield__label" class="form-control">Email</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="password" name="password">
                        <label class="mdl-textfield__label" class="form-control">Contrase√±a</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input type="file" name="avatar" multiple="multiple">
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="roles">
                        <label class="mdl-textfield__label" class="form-control">Asignar Rol</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="project_all">
                        <label class="mdl-textfield__label" class="form-control">Asignar Proyecto</label>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>