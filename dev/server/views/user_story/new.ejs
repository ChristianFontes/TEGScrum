<div class="mdl-layout mdl-js-layout mdl-color--grey-100" align="center">
    <main class="mdl-layout__content">
        <div class="mdl-card mdl-shadow--6dp">
            <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
                <h4 class="mdl-card__title-text">Nueva Historia de Usuario</h4>
            </div>
            <div class="mdl-card__supporting-text">
                <form action="/user_story/create" method="POST" class="form-signin">
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="nombre">
                        <label class="mdl-textfield__label" class="form-control">Nombre</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="descripcion">
                        <label class="mdl-textfield__label" class="form-control">Descripcion</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="estado">
                        <label class="mdl-textfield__label" class="form-control">Estado</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="sprint_nombre">
                        <label class="mdl-textfield__label" class="form-control">Sprint</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield">
                        <input class="mdl-textfield__input" class="form-control" type="text" name="task_name">
                        <label class="mdl-textfield__label" class="form-control">Task</label>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <button type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>